%div.mt-5.container{style: "width: 97%; max-width: 1500px;"}
  %div.row
    %div.col-md-4.col-12
      %img{src: asset_path('sc24_logo_2.png'), alt: 'Image description', style: "width: 100%; height: auto; object-fit: cover;"}

    %div.col-md-8.col-12.p-5
      %p
        %a{href: "https://carc.unm.edu/news--events/News/sc24.html", target: "_blank"} SC24 CARC Team Article
      %p
        %a{href: "https://sc24.supercomputing.org/2024/09/teams-compete-in-the-ultimate-hpc-challenge-at-sc24/", target: "_blank"} SCC24 Meet the Teams.
      %p
        %a{href: "https://sc24.supercomputing.org/students/student-cluster-competition/", target: "_blank"} SCC24 conference team site.

%hr

%div.m5-5.container{style: "width: 97%; max-width: 1500px;"}
  %div.text-center
    %h3.p-3 Cluster Configuration
  %div.row
    %div.col-md-8
      %img{src: asset_path('SC24-03.png'), alt: 'Image description', style: "width: 100%; height: auto; object-fit: cover;"}
    %div.col-md-4
      %p.text-center 3x Nodes
      %p
      %p - 2x Intel Xeon Platinum 8580
      %p - 64GB x 32 DDR5-5600 Memory
      %p - 4x Nvidia H100 NVL
      %p - 4x Nvidia ConnectX-7 NIC

%hr

%div
  %div.d-flex.flex-column.align-items-center
    %button.custom-dark-button{type: "button", "data-bs-toggle" => "collapse", "data-bs-target" => "#collapsePoster", "aria-expanded" => "false", "aria-controls" => "collapsePoster", style: "width: 95%;"}
      Team Poster
    %div#collapsePoster.collapse.text-center
      %img.sc-poster{src: asset_path('SC24Poster.jpg'), alt: 'SC23'}
      %div.mt-3
        %p
          %a{href: "https://www.dropbox.com/scl/fi/aa3yegenjlusvvb7qwnkv/UNM-SC24-Poster.pdf?rlkey=9aqbfl3zqcrft5zzcs73az4af&st=vkg4ll5x&dl=0"} view pdf

%hr

%div.mt-5
  %div.text-center
    %h3 Team Photos

  %div.d-flex.justify-content-center
    #carouselSC24Photos.carousel.slide{style: "width: 95%; max-width: 1500px;"}
      .carousel-indicators
        %button.active{"aria-current" => "true", "aria-label" => "Slide 1", "data-bs-slide-to" => "0", "data-bs-target" => "#carouselSC24Photos", :type => "button"}
        %button{"aria-label" => "Slide 2", "data-bs-slide-to" => "1", "data-bs-target" => "#carouselSC24Photos", :type => "button"}
      .carousel-inner
        .carousel-item.active
          %img.custom-carousel-img.d-block.w-100{alt: "img 1", src: asset_path('SC24-03.jpeg')}
        .carousel-item
          %img.custom-carousel-img.d-block.w-100{alt: "img 2", src: asset_path('SC24-01.jpeg')}
      %button.carousel-control-prev{"data-bs-slide" => "prev", "data-bs-target" => "#carouselSC24Photos", :type => "button"}
        %span.carousel-control-prev-icon{"aria-hidden" => "true"}
        %span.visually-hidden Previous
      %button.carousel-control-next{"data-bs-slide" => "next", "data-bs-target" => "#carouselSC24Photos", :type => "button"}
        %span.carousel-control-next-icon{"aria-hidden" => "true"}
        %span.visually-hidden Next

